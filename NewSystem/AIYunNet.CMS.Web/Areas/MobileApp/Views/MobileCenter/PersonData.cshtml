        var CityName = "@Model.CityName";
        var WorkerPosition = "@worker.WorkerPosition";
        var WorkYears = "@worker.WorkYears";
        var PriceName = "@worker.PriceName";

        if ("@SessionHelper.Get("PositionCode")" == "WebWorker") {
            if (TrueName == null || TrueName == "" || Sex == null || Sex == "" || CityName == null || CityName == "" || WorkYears == null || WorkYears == "" || PriceName == null || PriceName == "" || WorkerPosition == null || WorkerPosition == "")
            {
                //自定义标题风格
                layer.open({
                    title: [
                      '重要提示',
                      'background-color: #FF4351; color:#fff;'
                    ]
                  , content: '请完整填写个人资料，标红部分为必填项，资料不完整将无法接收订单。'
                });
            }
        } else if ("@SessionHelper.Get("PositionCode")" == "WebWorkerLeader")
        {
            if (TrueName == null || TrueName == "" || Sex == null || Sex == "" || CityName == null || CityName == "" || WorkYears == null || WorkYears == "" || PriceName == 0 || PriceName == "") {
                //自定义标题风格
                layer.open({
                    title: [
