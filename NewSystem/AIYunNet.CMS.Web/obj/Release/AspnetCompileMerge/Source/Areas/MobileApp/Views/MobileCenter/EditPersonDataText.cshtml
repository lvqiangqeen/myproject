
@{
    ViewBag.Title = "EditPersonDataText";
    Layout = "~/Areas/MobileApp/Views/Shared/_mobileLayout.cshtml";
    string title = Request["title"];
    string type = Request["type"];
    string data = Request["data"];
}
<link href="~/Content/mui-master/examples/hello-mui/css/mui.min.css" rel="stylesheet" />
<style>
    .modify input {
        line-height: 0rem;
        margin-top: 0rem;
    }

    button {
        vertical-align: middle;
        border: 0px solid #ccc;
        background-color: #1d1d21;
    }

</style>
<script src="~/Content/design/js/jquery-form.js"></script>
<script>
    $(function () {
        var title = "@title";
        var html = "<h1>" + title + "</h1>";
        $("#header").append(html);

        $(".bnt").click(function () {
            $("#sex").val($("input[name=Sex]:checked").val());
            $("button[type=submit]").click();
        })

        /** 验证文件是否导入成功  */
        $("#form1").ajaxForm(function (data) {
            if (data == "1") {
                window.location.href = "/MobileApp/MobileCenter/PersonData";
            } else {
                layer.open({
                    content: '修改失败'
       , btn: '我知道了'
                });
            }
        });
    })
</script>
<style>
    .clear-close {
        bottom: 94%;
    }
</style>
<div class="container" id="container">
    <form id="form1" class="mui-input-group" action="/MobileApp/MobileCenter/updatePersonData" method="post">
        <input type="hidden" name="type" value="@type" />
        @if (type == "Sex")
        {
            <div class="mui-input-row mui-radio">
                <label>男</label>
                <input name="Sex" type="radio" value="男">
            </div>
            <div class="mui-input-row mui-radio">
                <label>女</label>
                <input name="Sex" type="radio" value="女">
            </div>
            <input id="sex" type="hidden" name="data" value="@data" required>
                    <script>
                        var sex = "@data";
                        if (sex != null && sex != "") {
                            $("input[name=Sex][value=" + sex + "]").attr("checked", "true");
                        }
                    </script>
        }
        else
        {
            <script>
                $("#form1").removeClass();
            </script>
            <div class="modify">
                <input type="text" name="data" value="@data" required>
            </div>
        }
        <button type='submit' style="display:none;">保存</button>
    </form>


</div>
<div class="mui-content-padded">
    <button class="bnt mui-btn mui-btn-block mui-btn-primary">保存</button>
</div>