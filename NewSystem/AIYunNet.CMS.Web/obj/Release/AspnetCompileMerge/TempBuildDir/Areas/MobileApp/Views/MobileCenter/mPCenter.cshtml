@using AIYunNet.CMS.Domain.Model
@using AIYunNet.CMS.Common.Utility;
@model WebUser
@{
    ViewBag.Title = "mPCenter";
    Layout = "~/Areas/MobileApp/Views/Shared/_mobileLayout.cshtml";
}
<script>
    $(function () {
        var html="";
        if ("@SessionHelper.Get("PositionCode")"=="WebUser")
        {
            html = "<h1>业主中心</h1>";
        }else if("@SessionHelper.Get("PositionCode")"=="WebWorkerLeader")
        {
            html = "<h1>工长中心</h1>";
        }else
        {
            html = "<h1>工人中心</h1>";
        }
        $("#header").append(html);
    })
</script>
<div class="container" id="container">
    <div class="my-face">
        <div class="my-face-con">
            <div class="my-face-pic"><img src="@AppSettingsHelper.ImgUrl@Model.thumbnailImage"></div>
            <p>@Model.NickName</p>
        </div>
    </div>

    <div class="personal-list">
        <ul>
            @if (SessionHelper.Get("PositionCode") == "WebUser")
            {
                <li><a class="my-icon-grzl" href="/MobileApp/MobileCenter/UserData">个人资料</a></li>
            }
            else
            {
                if (SessionHelper.Get("PositionCode") == "WebWorkerLeader")
                {
                    <li><a class="my-icon-grzl" href="/MobileApp/MobileCenter/PersonData">工长资料</a></li>
                }
                else if (SessionHelper.Get("PositionCode") == "WebWorker")
                {
                    <li><a class="my-icon-grzl" href="/MobileApp/MobileCenter/PersonData">工人资料</a></li>
                }

            }

        </ul>
        <ul>
            <li><a class="my-icon-wddd" href="/MobileApp/MobileUser/BuidinglistUser">装修进度</a></li>
            <li><a class="my-icon-yhq" href="/MobileApp/MobileUser/DemandList">我的需求</a></li>
            <li><a class="my-icon-yhq" href="/MobileApp/MobileUser/DemandDetail">发布需求</a></li>
            @if (SessionHelper.Get("PositionCode") == "WebUser")
            {
                <li><a class="my-icon-wddd" href="/MobileApp/MobileUser/BuidinglistUser">装修进度</a></li>
                <li><a class="my-icon-yhq" href="/MobileApp/MobileUser/DemandList">我的需求</a></li>
                <li><a class="my-icon-yhq" href="/MobileApp/MobileUser/DemandDetail">发布需求</a></li>
            }
            else
            {
                <li><a class="my-icon-wddd" href="/MobileApp/mOrder/Orderlist">我的订单</a></li>
                <li><a class="my-icon-yhq" href="/MobileApp/mOrder/mobileBuidingList">订单进度</a></li>
                <li><a class="my-icon-wdjf" href="/MobileApp/mOrder/mTogetherBuidingList">我的合作项目</a></li>
            }

        </ul>
        <ul>
            <li><a class="my-icon-gsjj" href="#">公司简介</a></li>
            <li><a class="my-icon-bzzx" href="#">帮助中心</a></li>
            <li><a class="my-icon-kfzx" href="#">客服咨询<span class="my-tel">400-000-0000</span></a></li>
        </ul>
    </div>
    <a href="/MobileApp/mLogin/LoginCenter" class="order">退出</a>


</div>

