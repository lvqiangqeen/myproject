@model AIYunNet.CMS.Domain.Model.WebUser
@using AIYunNet.CMS.Domain.Model
@using AIYunNet.CMS.Common.Utility
@{
    ViewBag.Title = "AddAndUpdateUser";
    Layout = "~/Areas/SysAdmin/Views/Shared/_SysAdminLayout.cshtml";
}

<div class="box">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#UserInfoTab" data-toggle="tab">用户信息</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade in active" id="caseInfoTab">
            <div class="panel-body">
                @using (Ajax.BeginForm("AddAndUpdateUser", new AjaxOptions { HttpMethod = "Post", OnSuccess = "afterAddAndUpdateUser" }))
                {
                    <div class="innerLR">
                        <div class="form-horizontal">
                            <div class="form-group" style="display:none">
                                @Html.HiddenFor(m => m.UserID, new { id = "hidUserID" })
                            </div>
                            <div class="form-group">
                                <label for="UserName" class="col-sm-2 control-label">用户名：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="NickName" class="col-sm-2 control-label">昵称：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(m => m.NickName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="TrueName" class="col-sm-2 control-label">真实姓名：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(m => m.TrueName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Email" class="col-sm-2 control-label">邮箱：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Sex" class="col-sm-2 control-label">性别：</label>
                                <div class="col-sm-4">
                                   男 @Html.RadioButtonFor(m => m.Sex, "男", new { @name = "Sex"})
                                    女 @Html.RadioButtonFor(m => m.Sex, "女", new { @name = "Sex" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="UserType" class="col-sm-2 control-label">用户类型：</label>
                                <div class="col-sm-3">
                                    @Html.DropDownListFor(m => m.UserType, new SelectList(ViewBag.typelist, "Value", "Text"), new { @class = "form-control", id = "UserType" })

                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Telephone" class="col-sm-2 control-label">联系方式：</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Address" class="col-sm-2 control-label">街道地址：</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">设置：</label>
                                <div class="col-sm-offset col-sm-4">
                                    <div class="checkbox col-sm-4">
                                        <label class="checkbox-custom">
                                            @Html.CheckBoxFor(m => m.IsLock)
                                            锁定
                                        </label>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-9" style="text-align:center">
                                    <button type="submit" class="btn btn-primary new_button_style">保存</button>
                                    <button type="reset" class="btn new_button_style">清空</button>
                                    <a class="btn btn-primary new_button_style" id="Returnback">返回</a>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {

            $("#Returnback").click(function () {
                window.location.href = sessionStorage.getItem('url');
            })


        })

        function afterAddAndUpdateUser(ret) {
            if (ret.retCode == 1) {
                swal({
                    title: "添加成功",
                    text: "是否继续添加人员信息？",
                    type: "success",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "是, 继续",
                    cancelButtonText: "不, 返回",
                    closeOnConfirm: false,
                    closeOnCancel: false
                },
                function (isConfirm) {
                    var url = sessionStorage.getItem('url');
                    if (isConfirm) {
                        window.location.href = window.location.href;
                    } else {
                        window.location.href = url;
                    }
                });
            }
        }


    </script>
}