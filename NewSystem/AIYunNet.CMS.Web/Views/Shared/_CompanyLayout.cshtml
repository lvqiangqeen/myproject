<!DOCTYPE html>
<html>
<head>
    <title>装修公司--首页</title>
    <link href="~/Content/Css/decorationcompany/base.css" rel="stylesheet" />
    <link href="~/Content/Css/decorationcompany/index.css" rel="stylesheet" />
    <link href="~/Content/Css/common/pagination.css" rel="stylesheet" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script src="~/Content/Scripts/vue/vue.min.js"></script>
    <script src="~/Content/Scripts/jquery.js"></script>
    <script src="~/Content/Scripts/jquery.pagination.js"></script>
    <script type="text/javascript">
	    $(function(){
		    // $("#case > div.w > ul > li").on("mouseover",function(){
		    // 	$(this).find('.case_description').show();
		    // });
	        $("#news1").removeAttr("class");
		    $("#case > div.w > ul > li").hover(function (){
                $(this).find('.case_description').show(300)//.stop(true,true);
            },function (){
                $(this).find('.case_description').hide(300)//.stop(true,true);
            });
            $("#team > div.w > ul > li").hover(function (){
                $(this).find('.team_description').show(300)//.stop(true,true);
            },function (){
                $(this).find('.team_description').hide(300)//.stop(true,true);
            });

            $("#active > div.w > div.dec_main > div.dec_art > div").on("mouseover",function () {
        	    var target = $(this).attr("data-target");

        	    $("#"+target).show().siblings().hide();
        	    $(this).find(".art_one_title").addClass("news_active_left");
        	    $(this).siblings().find(".art_one_title").removeClass("news_active_left");
            });
	    });

	    //#case > div.w > ul > li:nth-child(1)
