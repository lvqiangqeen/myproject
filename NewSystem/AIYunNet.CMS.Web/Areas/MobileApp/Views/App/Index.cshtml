            <li style="background-color: white;"><div><a href="javascript:void(0)" class="more"><i><img src="/content/workerapp/updateimages/more.png"></i><em style="color:black;">更多</em></a></div></li>
        </ul>

    </div>
    <!--家居安装结束-->
    <!--家居维修开始-->
    <div class="ind-nav ind-nav2" style="display:none;">
        <div class="ind-tit">
            <h2>家居维修</h2>
        </div>
        <ul class="clearfix">
            <li><div><a href="/MobileApp/MobileWorker/mWorkerLeaderList"><i><img src="/content/workerapp/images/jjwx.png"></i><em>寻找工长</em></a></div></li>
            <li><div><a href="/MobileApp/MobileWorker/mWorkerList"><i><img src="/content/workerapp/images/wywx.png"></i><em>寻找工人</em></a></div></li>
            <li><div><a href="repair-details.html"><i><img src="/content/workerapp/images/mbxf.png"></i><em>木板修复</em></a></div></li>
            <li><div><a href="repair-details.html"><i><img src="/content/workerapp/images/djwx.png"></i><em>灯具维修</em></a></div></li>
            <li><div><a href="repair-details.html"><i><img src="/content/workerapp/images/xsgdst.png"></i><em>下水管道疏通</em></a></div></li>
            <li><div><a href="add-class.html"><i><img src="/content/workerapp/images/xczx.png"></i><em>现场增项</em></a></div></li>
            <li><div><a href="javascript:void(0)" class="more"><i><img src="/content/workerapp/images/more.png"></i><em>更多</em></a></div></li>
        </ul>
    </div>
    <!--家居维修结束-->
    <!--新闻-->
    <div class="ind-nav ind-nav3">
        <div class="ind-tit">
            <h2>案例赏析</h2>
        </div>
  
        <div id="slider" class="mui-slider">
                <div class="mui-slider-group mui-slider-loop">
                    <!-- 额外增加的一个节点(循环轮播：第一个节点是最后一张轮播) -->
                    @{ int i = 0;}
                    @foreach (var item in listanli)
                    {
                        if (i < 4)
                        {
                            if (i == 0)
                            {
                                <div class="mui-slider-item mui-slider-item-duplicate">
                                    <a href="@item.RecWechartUrl">
                                        <img src="@AppSettingsHelper.ImgUrl@item.RecommendImg">
                                        <p class="mui-slider-title">@item.RecommendName</p>
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="mui-slider-item">
                                    <a href="@item.RecWechartUrl">
                                        <img src="@AppSettingsHelper.ImgUrl@item.RecommendImg">
                                        <p class="mui-slider-title">@item.RecommendName</p>
                                    </a>
                                </div>
                            }
                        }

                        i++;
                    }
                    @{ int j = 0;}
                    @foreach (var item in listanli)
                    {
                        if (j < 2)
                        {
                            if (j == 1)
                            {
                                <div class="mui-slider-item mui-slider-item-duplicate">
                                    <a href="@item.RecWechartUrl">
                                        <img src="@AppSettingsHelper.ImgUrl@item.RecommendImg">
                                        <p class="mui-slider-title">@item.RecommendName</p>
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="mui-slider-item">
                                    <a href="@item.RecWechartUrl">
                                        <img src="@AppSettingsHelper.ImgUrl@item.RecommendImg">
                                        <p class="mui-slider-title">@item.RecommendName</p>
                                    </a>
                                </div>
                            }
                        }

                        j++;
                    }
                </div>
                <div class="mui-slider-indicator mui-text-right" style="display:none;">
                    <div class="mui-indicator mui-active"></div>
                    <div class="mui-indicator"></div>
                    <div class="mui-indicator"></div>
                    <div class="mui-indicator"></div>
                </div>
            </div>
        
    </div>
    <!--新闻-->
    <!--二手置换 货运配送开始-->
    <div class="ind-nav ind-nav4" style="margin-top: 11px;">
        <div class="ind-tit" style="border-bottom: 1px solid #ededed;">
            <h2>新闻推送</h2>
        </div>
        @foreach (var item in listxinwen)
        {
            <div class="ind-item">
                <a href="@item.RecWechartUrl">
                    <div class="ind-item-img"><img src="@AppSettingsHelper.ImgUrl@item.thumbnailImage" style="border-radius:8px;"></div>
                    <div class="ind-item-txt">
                        <h3 class="red">@item.RecommendName</h3>
                        <p>@StringHelper.StringTruncat(item.RecommendInfo,16,"...")</p>
                    </div>
                </a>
            </div>
        }
       
    </div>
    <!--二手置换 货运配送结束-->

</div>
