        function storeActiveMenuID(activeMenuID) {
            var now = new Date();
            var time = now.getTime();
            time += 1000 * 60 * 60 * 24 * 30 * 6;
            var expireTime = new Date(time);
            var cookieKey = "aiyunnetActiveMenuID";
            CookieUtil.set(cookieKey, activeMenuID, expireTime);
        }

        function restoreActiveMenu() {
            var storedActiveMenuID = CookieUtil.get("aiyunnetActiveMenuID");
            $("#" + storedActiveMenuID).addClass("active").children("ul").addClass("menu-open").css("display", "block");
        }

        $(function () {
            $(".treeview>.treeview-menu>li").click(function () {
                var activeMenuID = $(this).parent("ul").parent("li").attr("id");
                storeActiveMenuID(activeMenuID);
            });

            restoreActiveMenu();
        });
    </script>
