@model AIYunNet.CMS.Domain.Model.WebBuiding
@using AIYunNet.CMS.Domain.Model
@using AIYunNet.CMS.Common.Utility;
@{
    ViewBag.Title = "mBuidingDetail";
    Layout = "~/Areas/MobileApp/Views/Shared/_mobileLayout.cshtml";
    WebBuidingStages buidingstage = ViewBag.buidingstage as WebBuidingStages;
}
<link href="~/Content/layui/css/layui.css" rel="stylesheet" />
<script>
    $(function () {
        var title = '@Model.BuidingTitle';
        var html = "<h1>"+title+"</h1>";
        $("#header").append(html);
    })
</script>
<div class="container" id="container">

    <div class="details-img"><img src="@AppSettingsHelper.ImgUrl@Model.BuidingImage"></div>
    <ul class="details-price clearfix">
        <li><em>@Model.Price</em>元<em style="margin-left:15px;">@Model.Space</em>平米</li>
        <li>类型：@ViewBag.demand.DemandTypeName</li>
    </ul>
    <div class="min-price">
        <div class="min-price-tit"><h2>做工详情</h2></div>
        <div class="min-price-con">@Model.BuidingBrief</div>
        <ul class="layui-timeline">
            <li class="layui-timeline-item">
                <i class="layui-icon layui-timeline-axis"></i>
                @if (buidingstage.IsUserEnd == 1)
                {
                    <div class="layui-timeline-content layui-text" style="background-color: #5FB878;">
                        <h3 class="layui-timeline-title">@buidingstage.StageName</h3>
                        <p>
                            @if (buidingstage.thumContent != "" && buidingstage.thumContent != null)
                            {
                                List<string> list = buidingstage.thumContent.Split('|').Where(c => c != "").ToList();
                                foreach (string item in list)
                                {
                                    <img src="@AppSettingsHelper.ImgUrl@item" style="max-width:100%;margin-top:5px;">
                                }

                            }
                            else
                            {
                                @:装修信息还未发布
                            }
                        </p>
                    </div>
                }
                else
                {
                    <div class="layui-timeline-content layui-text">
                        <h3 class="layui-timeline-title">@buidingstage.StageName</h3>
                        <p>
                            @if (buidingstage.thumContent != "" && buidingstage.thumContent != null)
                            {
                                List<string> list = buidingstage.thumContent.Split('|').Where(c => c != "").ToList();
                                foreach (string item in list)
                                {
                                    <img src="@AppSettingsHelper.ImgUrl@item" style="max-width:100%;margin-top:5px;">
                                }

                            }
                            else
                            {
                                @:装修信息还未发布
                            }
                        </p>
                    </div>
                }
            </li>
            <li class="layui-timeline-item">
                <i class="layui-icon layui-timeline-axis"></i>
                @if (Model.IsUserEnd == 1)
                {
                    <div class="layui-timeline-content layui-text" style="background-color: #5FB878;">
                        <h3 class="layui-timeline-title">项目竣工</h3>
                    </div>
                }
                else
                {
                    <div class="layui-timeline-content layui-text">
                        <h3 class="layui-timeline-title">项目竣工</h3>
                    </div>
                }
            </li>
        </ul>
    </div>
      
    @*<div class="min-price-bot">
        <div class="min-price-tel"><a href="#">电话咨询</a></div>
        <div class="min-price-order"><a href="reservation.html">我要预约</a></div>
    </div>*@

</div>

