@model AIYunNet.CMS.Domain.Model.WebPeople
@using AIYunNet.CMS.Domain.Model;
@using AIYunNet.CMS.Common.Utility;
@using AIYunNet.CMS.BLL.Service;
@{
	List<WebBuiding> caseList = ViewBag.CaseList as List<WebBuiding>;
	WebCommonService webCommen = new WebCommonService();
}
<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport">
	<meta content="yes" name="apple-mobile-web-app-capable" />
	<meta content="black" name="apple-mobile-web-app-status-bar-style" />
	<meta content="telephone=no" name="format-detection" />
	<title>师傅详情</title>
	<link rel="stylesheet" type="text/css" href="~/Content/mobileapp/css/base.css">
	<link rel="stylesheet" type="text/css" href="~/Content/mobileapp/css/common.css">
	<script type="text/javascript" src="~/Content/mobileapp/js/jquery.min.js"></script>
	<script src="~/Content/mobileapp/js/common.js"></script>
	<style>
		.case_progress {
			height: 1.75rem;
			line-height: 1.75rem;
			background-color: #fa4b28;
			color: #fff;
			border: solid 1px #fa4b28;
			border-radius: 3px;
			padding: 5px 5px;
		}
	</style>
</head>

<body>
	<header class="header" id="header">
		<a href="javascript:history.go(-1)" target=_self class="back">返回</a>
		<h1>工人详情</h1>
	</header>
	<!--header-end-->

	<div class="container" id="container">

		<div class="worker-details">

			<div class="worker-item worker">
				<div class="worker-top">
					<div class="worker-top-img"><img src="@AppSettingsHelper.ImgUrl@Model.thumbnailImage"></div>
					<div class="worker-top-txt">
						<h2>@Model.PeopleName</h2>
						<span>工龄：<em>@Model.WorkYears</em>年</span>
						<span>籍贯：<em>@Model.AreasName</em></span>
						<span>已服务：<em>@Model.CaseCount</em>单</span>
					</div>
				</div>
				<div class="worker-bot">
					<a href="user-evaluation.html">
						<span>用户评分：</span>
						<span class="sa_star"><i class="sa_d" style="width:70%;"></i></span>
						<span>(<em>20</em>人评价)</span>
					</a>
				</div>
			</div>

			<div class="worker-item">
				<div class="worker-item-tit"><h2>服务项目</h2></div>
				<div class="worker-item-con">木地板、木门安装木地板、木门安装木地板、木门安装木地板、木门安装。</div>
			</div>

			<div class="worker-item">
				<div class="worker-item-tit"><h2>服务范围</h2></div>
				<div class="worker-item-con">木地板、木门安装木地板、木门安装木地板、木门安装木地板、木门安装。</div>
			</div>

			<div class="worker-item">
				<div class="worker-item-tit"><h2>个人简介</h2></div>
				<div class="worker-item-con">@Model.PeopleInfo</div>
			</div>
		</div>
		@if (caseList != null && caseList.Count > 0)
		{
			for (int i = 0; i < caseList.Count; i++)
			{
				<div class="ind-item">
					<a href="#">
						<div class="ind-item-img"><img src="@AppSettingsHelper.ImgUrl@caseList[i].thumbnailImage"></div>
						<div class="ind-item-txt">
							<h3 class="red">@caseList[i].BuidingTitle</h3>
							<p>@caseList[i].BuidingBrief</p>
							<p><span class="case_progress" data-buiding_id="@caseList[i].BuidingID">项目进度</span></p>
						</div>
					</a>
				</div>
			}
		}
	</div>
	<!--container-end-->
	<script>
		$(function ()
		{
			$(".case_progress").click(function ()
			{
				var buidingID = $(this).data("buiding_id");
				if (!buidingID)
				{
					return;
				}

				window.location.href = "/MobileApp/App/CaseProgressInfo?buidingID=" + buidingID + "&rnd=" + Math.random();
			});
		})
	</script>
</body>
</html>

