    <!--Banner-->
    <div class="banner" id="index-banner">
        <div class="banner-pics">
            <ul class="banner-pics-list OnSale-banner">
                @{int k = 0;}
                @foreach (var item in listlubo)
                {
                    if (k < 3)
                    {
                        <li><a href="@item.RecWechartUrl"><img src="@AppSettingsHelper.ImgUrl@item.RecommendImg" alt="" /></a></li>
                    }
                    k++;
                }
            </ul>
        </div>
        <ul class="banner-tit">
            <li class="on"></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    <script type="text/javascript">
        TouchSlide({
            slideCell:"#index-banner",
            titCell:".banner-tit li",//开启自动分页 autoPage:true ，此时设置 titCell 为导航元素包裹层
            mainCell:".banner-pics-list",
            effect:"left",
            autoPlay:true,//自动播放
            //autoPage:true, //自动分页
            })
    </script>
    <!--banner-end-->
    <!--家居安装开始-->
    <div class="ind-nav ind-nav1">
        <div class="ind-tit">
            <h2>家居装修</h2>
        </div>
        <ul class="clearfix">
            <li style="background-color: white;"><div><a href="floor-classification.html"><i><img src="~/content/workerapp/updateimages/zgj.png"></i><em style="color:black;">找管家</em></a></div></li>
            <li style="background-color: #91887E;"><div><a href="/MobileApp/MobileWorker/mWorkerLeaderList"><i><img src="/content/workerapp/updateimages/zgz.png"></i><em>找工长</em></a></div></li>
            <li style="background-color: #564E48;"><div><a href="/MobileApp/MobileWorker/mWorkerList"><i><img src="/content/workerapp/updateimages/zgr.png"></i><em>找工人</em></a></div></li>
            <li style="background-color: #78664C;"><div><a href="floor-classification.html"><i><img src="/content/workerapp/updateimages/zgs.png"></i><em>找公司</em></a></div></li>
            <li style="background-color: #968D75;"><div><a href="floor-classification.html"><i><img src="/content/workerapp/updateimages/sjs.png"></i><em>设计师</em></a></div></li>
            <li style="background-color: #625138;"><div><a href="http://m.51must.com/list.aspx?wid=35&cid=165"><i><img src="/content/workerapp/updateimages/al.png"></i><em>案例赏析</em></a></div></li>
            <li style="background-color: #82705C;"><div><a href="floor-classification.html"><i><img src="/content/workerapp/updateimages/wx.png"></i><em>安装维修</em></a></div></li>
