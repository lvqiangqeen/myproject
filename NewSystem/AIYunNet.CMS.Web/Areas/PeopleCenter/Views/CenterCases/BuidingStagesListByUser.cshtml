                                                    {
                                                        <a title="业主审核未通过" class="stages" href="javascript:OpenStage(@buiding.BuidingID,@listid[i],'@list[i]','@stage.StageContent')" style="background-color:red;margin-right:5px;padding: 5px;">@list[i]</a><i class="fa fa-arrow-right" style="color: #B5B5B5;"></i>
                                                    }
