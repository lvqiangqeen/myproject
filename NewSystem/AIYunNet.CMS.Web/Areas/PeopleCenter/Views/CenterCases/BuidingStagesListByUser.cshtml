                                                    }
                                                    else
                                                    {
                                                        if (stage.IsComplete)
                                                        {
                                                            <a title="装修已完成" class="stages" href="javascript:OpenStage(@buiding.BuidingID,@listid[i],'@list[i]','@stage.StageContent')" style="background-color:#a1e6ff;margin-right:5px;padding: 5px;">@list[i]</a><i class="fa fa-arrow-right" style="color: #B5B5B5;"></i>
                                                        }
