@using AIYunNet.CMS.Domain.Model
@using AIYunNet.CMS.Common.Utility
@model AIYunNet.CMS.Domain.Model.WebCompany
@{
    ViewBag.Title = "CompanyTuBaDetail";
    Layout = "~/Views/Shared/_LayoutDecCompany.cshtml";
}
<style>
    body {
        text-align: left;
    }
</style>
@{ Html.RenderPartial("_CompanyTuBaHead");}
<div class="cont_all clearfix">


    <div class="cont_l">
        <div class="left_list">
            <ul>
                <li class="on"><a href="javascript:void(0);">公司简介<input type="hidden" value="jianjie"/></a></li>
                <li><a href="javascript:void(0);">企业证书<input type="hidden" value="zhengshu" /></a></li>
                <li><a href="javascript:void(0);">工商注册信息<input type="hidden" value="zhuce" /></a></li>
                <li style="display:none;"><a href="javascript:void(0);">文章资讯<input type="hidden" value="zixun" /></a></li>
                <li><a href="javascript:void(0);">联系我们<input type="hidden" value="lianxi" /></a></li>

            </ul>
        </div>
    </div>
    <script>
        $(function () {
            $(".left_list > ul > li > a").click(function () {
                var id=$(this).find("input").val();
                $(this).parent("li").addClass("on").prevAll("li").removeClass();
                $(this).parent("li").nextAll("li").removeClass();
                $("#" + id).show();
                $("#" + id).prevAll("div.cont_r").hide();
                $("#" + id).nextAll("div.cont_r").hide();
            });
        })
    </script>
    <div class="cont_r" id="jianjie">
        <style>
            .cont_r .detail table tr .content {
                width: 558px;
            }

            .cont_r .antro .describe {
                width: auto;
            }

                .cont_r .antro .describe .logo {
                    margin-right: 20px;
                    margin-bottom: 16px;
                }

                    .cont_r .antro .describe .logo img {
                        width: 150px;
                        height: 150px;
                    }
        </style>

        <div class="antro clearfix">
            <p class="sign_title">公司简介</p>
            <div class="content">

                <div class="describe">
                    <div class="logo"><img src="@AppSettingsHelper.ImgUrl@Model.CompanyImage" width="150" height="150"></div>
                    <p style="font-size: 14px;">
                        @Html.Raw(Model.CompanyInfo)
                    </p>
                </div>
            </div>
        </div>
        <div class="detail">
            <p class="sign_title">详细信息</p>
            <table>
                <tbody>
                    <tr>
                        <td class="thead">公司规模</td>
                        <td class="content">
                            @Model.CompanySize
                        </td>
                    </tr>
                    <tr>
                        <td class="thead">服务区域</td>
                        <td class="content">@Model.ProvinceName&nbsp;@Model.CityName&nbsp;@Model.AreasName</td>
                    </tr>
                    <tr>
                        <td class="thead">服务专长</td>
                        <td class="content">@Model.GoodAtStyle</td>
                    </tr>
                    <tr>
                        <td class="thead">企业官网</td>
                        <td class="content">@Model.CompanyNet</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="cont_r" style="display:none;" id="zhengshu">
        <style type="text/css">
            .cover .show img {
                top: 0 !important;
                left: 0 !important;
            }

            .cover .lrow, .cover .rrow {
                padding: 0 !important;
            }
        </style>
        <div class="intro_row">
            <p class="intro_title">营业执照</p>
            <ul class="clearfix">
                @Html.Raw(Model.CompanyLicence)
            </ul>
        </div>
        <div class="intro_row">
            <p class="intro_title">资质证书</p>
            <ul class="clearfix">
                @Html.Raw(Model.Certification)
            </ul>
        </div>
        <div class="intro_row">
            <p class="intro_title">荣誉证书</p>
            <ul class="clearfix">
                @Html.Raw(Model.Honor)
            </ul>
        </div>
    </div>

    <div class="cont_r" style="display:none;" id="zhuce">

        <div class="zgs_gszc_container">
            <span>工商注册信息</span>
            <table width="758" border="0" class="zgsgc_table">
                <tbody>
                    <tr>
                        <td class="zgsgc_title">公司名称</td>
                        <td class="zgsgc_details">@Model.CompanyName</td>
                    </tr>
                    <tr>
                        <td class="zgsgc_title">注册地址</td>
                        <td class="zgsgc_details">
                            <p>@Model.RegistAddress</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="zgsgc_title">注册资金</td>
                        <td class="zgsgc_details">@Model.RegistMoney</td>
                    </tr>
                    <tr>
                        <td class="zgsgc_title">成立日期</td>
                        <td class="zgsgc_details">@Model.CompanyAddOn.ToString("yyyy-MM-dd")</td>
                    </tr>
                    <tr>
                        <td class="zgsgc_title">登记机关</td>
                        <td class="zgsgc_details">@Model.RegistAuthority</td>
                    </tr>
                    <tr>
                        <td class="zgsgc_title">经营范围</td>
                        <td class="zgsgc_details">@Model.BusinessScope</td>
                    </tr>
                    <tr>
                        <td class="zgsgc_title">注册号</td>
                        <td class="zgsgc_details">@Model.RegistMark</td>
                    </tr>
                    <tr>
                        <td class="zgsgc_title zgsgs_cb">法定代表人</td>
                        <td class="zgsgc_details  zgsgs_cb">@Model.RepresentPerson</td>
                    </tr>

                </tbody>
            </table>

        </div>
    </div>

    <div class="cont_r" style="display:none;" id="zixun">
        <ul class="article_list clearfix">
            <li>
                <a href="/zs/478250/news-display-n377959.html">天花板的设计和风水《佳时特装饰》</a>
                <span>2017-04-07</span>
            </li>
            <li>
                <a href="/zs/478250/news-display-n377960.html">一篇文章让你看懂各类装修风格《佳时特装饰》</a>
                <span>2017-04-07</span>
            </li>
            <li>
                <a href="/zs/478250/news-display-n377961.html">自装还是找装修公司，看完这篇文章你会明白一切《佳时特装饰》</a>
                <span>2017-04-07</span>
            </li>
            <li>
                <a href="/zs/478250/news-display-n377965.html">室内装修色彩搭配原则《佳时特装饰》</a>
                <span>2017-04-07</span>
            </li>
            <li>
                <a href="/zs/478250/news-display-n377966.html">最实用的背景墙颜色搭配《佳时特装饰》</a>
                <span>2017-04-07</span>
            </li>

        </ul>
    </div>

    <div class="cont_r" style="display:none;" id="lianxi">

        <div class="main_r">
            <ul class="company_list clearfix">
                <li style="border:0px;">

                    <img src="@AppSettingsHelper.ImgUrl@Model.CompanyImage" alt="@Model.CompanyName">            
                    <div class="detail">
                        <p class="title">@Model.CompanyName</p>
                        <dl>
                            <dd>地址：@Model.CompanyAddress </dd>
                            <dd style="display:none;">街道：@Model.CompanyAddress</dd>
                            <dd style="line-height:200%; width:215px; font-size:12px;">
                                如果您需要该装修公司为您装修设计，请直接在此登记！我们工作人员会在2小时内与您联系！
                                <br>
                                或拨打客服热线：
                                <p style="font-style:normal; font-weight:bold; font-size:20px;">@Model.CompanyMoble</p>
                            </dd>
                            <dd>网址：@Model.CompanyNet                                    </dd>
                        </dl>
                        <a href="javascript:void(0)" class="free_order" onclick="return freeBooking({toid:'478250',s_source:75,ptag:'1_5_2_3'});">免费申请预约</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <p class="clear"></p>
</div>

