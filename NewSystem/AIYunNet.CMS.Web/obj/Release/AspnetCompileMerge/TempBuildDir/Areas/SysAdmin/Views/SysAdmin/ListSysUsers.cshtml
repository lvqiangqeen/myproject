@using AIYunNet.CMS.Domain.Model
@{
    ViewBag.Title = "系统用户管理";
    Layout = "~/Areas/SysAdmin/Views/Shared/_SysAdminLayout.cshtml";
    List<SysAdminUser> sysUserList = ViewBag.SysUserList as List<SysAdminUser>;
}
<div class="box">
    <div class="box-header">
        <h3 class="box-title">
            <a class="btn btn-primary" href="/SysAdmin/SysAdmin/AddOrEditSysUser?userID=0"><i class="fa fa-pencil"></i>添加系统用户</a>
        </h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body" id="webSysUserList">
        <table id="webSysUserDt" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
                <tr class="header-style" role="row">
                    <th class="text-center">
                        <input id="chkAll" type="checkbox">
                    </th>
                    <th>账号</th>
                    <th>角色</th>
                    <th>所属公司</th>
                    <th>是否启用</th>
                    <th>添加时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @if (sysUserList != null)
                {
                    foreach (SysAdminUser sysUser in sysUserList)
                    {
                        <tr>
                            <td><input class="chkFriendLink" type="checkbox" value="@sysUser.UserID"></td>
                            <td>@sysUser.UserAccount</td>
                            <td>
                                @if (sysUser.RoleType == 1)
                                {
                                    @:超级管理员
                            }
                                else
                                {
                                    @:一般用户
                                }
                        </td>
                        <td>@sysUser.CompanyName</td>
                        <td>
                            @if (sysUser.IsUse)
                            {
                                @:<span style="color:red">是</span>
                                    }
                            else
                            {
                                @:否
                                    }
                        </td>
                        <td>@sysUser.AddOn</td>
                        <td>
                            <a class="btn1 btn-stroke" href="/SysAdmin/SysAdmin/AddOrEditSysUser?userID=@sysUser.UserID"><i class="fa fa-pencil"></i></a>&nbsp;&nbsp;
                        </td>
                    </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>