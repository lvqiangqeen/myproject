    <script>
        //手机验证
        function IsTel(Tel) {
            var re = new RegExp(/^((\d{11})|^((\d{7,8})|(\d{4}|\d{3})-(\d{7,8})|(\d{4}|\d{3})-(\d{7,8})-(\d{4}|\d{3}|\d{2}|\d{1})|(\d{7,8})-(\d{4}|\d{3}|\d{2}|\d{1}))$)$/);
            var retu = Tel.match(re);
            if (retu) {
                return true;
            } else {
                return false;
            }
        }
            function IsHaveTel(userAccount) {
                var datacode = 1;
                $.ajax({
                    async: false,
                    type: "post",
                    url: "/MobileApp/mLogin/IsHaveTel",
                    data: {
                        userAccount: userAccount
                    },
                    success: function (data) {
                        if (data == 0) {

                        }
                        else {
                            layer.open({
                                content: '该账号不存在请重新输入！'
    , btn: '我知道了'
                            });
                            datacode = 0;
                        }
                    },
                    error: function (xhr, type) {
                        alert('Ajax error!2');
                    }
                });
                if (datacode == 0) {
                    return 0;
                }
            }
            var countdown = 30;
            function sendemail() {
                var userAccount = $("#account").val();
                if (userAccount == "" || userAccount == null)
                {
                    layer.open({
                        content: '手机号不能为空！'
, btn: '我知道了'
                    });
                    return false;
                }
                if (!IsTel(userAccount))
                {
                    layer.open({
                        content: '请输入正确的手机号！'
, btn: '我知道了'
                    });
                    return false;
                }

                var datacode = IsHaveTel(userAccount);
                if (datacode == 0) {
                    return false;
                }
                $.ajax({
                    async: false,
                    type: "post",
                    url: "/MobileApp/mLogin/Getsuijishu",
                    data: {
                        userAccount: userAccount
                    },
                    success: function (data) {
                        if (data.RetCode > 0) {
                            $("#yanzhengret").val(data.suijishu);
                        }
                        else {

                        }
                    },
                    error: function (xhr, type) {
                        alert('Ajax error!2');
                    }
                });
                var obj = $("#SMSyanzheng");
                settime(obj);

            }
            function settime(obj) { //发送验证码倒计时
                if (countdown == 0) {
                    obj.attr('disabled', false);
                    //obj.removeattr("disabled");
                    obj.val("获取验证码");
                    countdown = 60;
                    return;
                } else {
                    obj.attr('disabled', true);
                    obj.val("重新发送(" + countdown + ")");
                    countdown--;
                }
                setTimeout(function () {
                    settime(obj)
                }
                    , 1000)
            }


            $("#regist").click(function () {
                var userAccount = $("#account").val();
                var yanzheng = $("#yanzheng").val();
                var yanzhengret = $("#yanzhengret").val();
                if (!IsTel(userAccount)) {
                    layer.open({
                        content: '请输入正确的手机号！'
, btn: '我知道了'
                    });
                    return false;
                }
                if (yanzheng != yanzhengret)
                {
                    layer.open({
                        content: '短信验证码有误！'
, btn: '我知道了'
                    });
                    return false;
                } else
                {
                    window.location.href = "/MobileApp/mLogin/mewPassword?userAccount=" + userAccount;
                }
            })

    </script>

