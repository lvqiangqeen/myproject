                                                            <a title="装修未完成" class="stages" href="javascript:void(0)" style="background-color:#B5B5B5;margin-right:5px;padding: 5px;">@list[i]</a><i class="fa fa-arrow-right" style="color: #B5B5B5;"></i>
                                                        }
                                                    }
                                                }
