                            // 告诉jQuery不要去设置Content-Type请求头
                            contentType: false,
                            cache: false,
                            traditional: true,
                            data: data,
                            success: function (data) {
                                if (data.isUploaded) {
                                    var Img = data.message;
                                    var thum = data.thumbnailmessage;
                                    $("input[name=thumbnailImage]").val(thum);
