<script src="~/Content/mui-master/examples/hello-mui/js/mui.pullToRefresh.material.js"></script>
<script>
        mui.init();
        //示例1
        (function ($) {
            //阻尼系数
            var deceleration = mui.os.ios ? 0.003 : 0.0009;
            $('.mui-scroll-wrapper').scroll({

                bounce: false,
                indicators: true, //是否显示滚动条
                deceleration: deceleration
            });
            $.ready(function () {
                //循环初始化所有下拉刷新，上拉加载。
                var pageIndex1 = 1;
                var pageIndex2 = 1;
                var pageIndex3 = 1;
                var pageIndex4 = 1;
                $.each(document.querySelectorAll('.mui-slider-group .mui-scroll'), function (index, pullRefreshEl) {
                    $(pullRefreshEl).pullToRefresh({
                        up: {
                            contentnomore: '没有更多了',
                            contentrefresh: "正在加载...",
                            auto: true,
                            callback: function () {
                                var self = this;
                                setTimeout(function () {
                                    var IsAccept = 0;
                                    var IsPlan = 0;
                                    if (index == "0") {
                                        IsAccept = 0;
                                        IsPlan = 0;
                                    } else if (index == "1") {
                                        IsAccept = 1;
                                        IsPlan = 0;
                                    } else if (index == "2") {
                                        IsAccept = 1;
                                        IsPlan = 1;
                                    } else{
                                        IsAccept = 2;
                                        IsPlan = 0;
                                    }
                                    var ul = self.element.querySelector('.mui-table-view');
                                    var bool = false;
                                    if (index == "0") {
                                        var html = createFragment1(pageIndex1, IsAccept, IsPlan);
                                        ul.appendChild(createFragment1(pageIndex1, IsAccept, IsPlan));
                                        bool = html.childNodes.length == 0 ? true : false;
                                        pageIndex1++;
                                    }
                                    else if (index == "1") {
                                        var html = createFragment1(pageIndex2, IsAccept, IsPlan);
                                        ul.appendChild(createFragment1(pageIndex2, IsAccept, IsPlan));
                                        bool = html.childNodes.length == 0 ? true : false;
                                        pageIndex2++;
                                    } else if (index == "2") {
                                        var html = createFragment1(pageIndex3, IsAccept, IsPlan);
                                        ul.appendChild(createFragment1(pageIndex3, IsAccept, IsPlan));
                                        bool = html.childNodes.length == 0 ? true : false;
                                        pageIndex3++;
                                    } else
                                    {
                                        var html = createFragment1(pageIndex4, IsAccept, IsPlan);
                                        ul.appendChild(createFragment1(pageIndex4, IsAccept, IsPlan));
                                        bool = html.childNodes.length == 0 ? true : false;
                                        pageIndex4++;
                                    }
                                    //自定义颜色示例
                                    mui(".mui-progressbar").each(function () {
                                        mui(this).progressbar({ progress: this.getAttribute("data-progress") }).show();
                                    });
                                    self.endPullUpToRefresh(bool);
                                }, 200);
                            }
                        }
                    });
                });

                var time = function (AddOn) {
                    var a = AddOn
                    var date = new Date(parseInt(a.slice(6)));
                    var result = date.getFullYear() + '年' + date.getMonth() + '月' + date.getDate() + '日';
                    return result;
                }
                function ChangeDateFormat(cellval) {
                    var date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
                    var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
                    var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
                    return date.getFullYear() + "-" + month + "-" + currentDate;
                }
                var createFragment1 = function (pageIndex, IsAccept, IsPlan) {
                    var fragment = document.createDocumentFragment();
                    var result = "";
                    $.ajax({
                        type: 'post',
                        url: '/MobileApp/MobileUser/GetDemandlist',
                        async: false,
                        dataType: "json",
                        data: {
                            CurPage: pageIndex,
                            PageSize: 10,
                            IsAccept: IsAccept,
                            IsPlan: IsPlan,
                        },
                        success: function (data) {

                            $.each(data, function (i, item) {
                                var li = document.createElement('li');
                                li.className = 'mui-table-view-cell mui-media';

                                var html = '<a class="mui-navigate-right" href="/MobileApp/MobileUser/DemandDetail?id=' + item.id + '">'
                                        + '<div class="mui-table mui-media-body">'
                                        + '<div class="mui-table-cell mui-col-xs-10">'
                                        + '<h4 class="mui-ellipsis">' + item.buidingname + '</h4>';
                                if (item.IsAccept == 1) {
                                    html += '<h5>施工者：' + item.GetUserName + '</h5>';
                                } else
                                {
                                    var AcceptUserName = item.AcceptUserName == null ? '未选择' : item.AcceptUserName;
                                    html += '<h5>接收人：' + AcceptUserName + '</h5>'
                                }
                                      
                                html += '<h5>发布日：' + ChangeDateFormat(item.AddOn) + '</h5>'
                                        + '</div>'
                                        + '<div class="mui-table-cell mui-col-xs-2 mui-text-right">';
                                if (item.IsAccept == 0)
                                {
                                    html += '<span class="mui-h5" style="color:#007aff;">新需求</span></div></div></a>';
                                } else if (item.IsAccept == 2) {
                                    html += '<span class="mui-h5" style="color:red;">已拒绝</span></div></div></a>';
                                } else
                                {
                                    if (IsPlan == 0) {
                                        html += '<span class="mui-h5" style="color:#007aff;">已接受</span></div></div></a>';
                                    } else
                                    {
                                        html += '<span class="mui-h5" style="color:#009688;">施工中</span></div></div></a>'
                                        + '<a href="/MobileApp/MobileUser/BuidingDetailUser?Guid=' + item.Guid + '" class="mui-btn mui-btn-primary mui-btn-outlined">施工情况</a>';
                                    }
                                }
                                li.innerHTML = html;
                                fragment.appendChild(li);
                            });

                        }
                    });
                    return fragment;
                };
            });
        })(mui);
</script>

