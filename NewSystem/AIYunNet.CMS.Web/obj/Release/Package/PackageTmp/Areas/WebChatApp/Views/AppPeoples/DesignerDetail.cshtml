@model AIYunNet.CMS.Domain.Model.WebPeople
@using AIYunNet.CMS.BLL.IService;
@using AIYunNet.CMS.BLL.Service;
@using AIYunNet.CMS.Domain.Model;
@using AIYunNet.CMS.Common.Utility
@{
    ViewBag.Title = "DesignerDetail";
    Layout = "~/Areas/WebChatApp/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container">
        <div class="container no-bottom">
            <div class="owl-item" style="width: 315px;">
                <div>
                    <div class="staff-item">
                        <img src="@AppSettingsHelper.thumbnailImage@Model.thumbnailImage" alt="img">
                        <h4>@Model.PeopleName</h4>
                        <em>@Model.PeoplePosition</em>
                        <strong>@Model.BelongArea | 擅长：@Model.GoodAtStyle | 从业年限：@Model.WorkYears 年</strong>
                    </div>
                </div>
            </div>
        </div>
        <div class="decoration"></div>
        <div class="container no-bottom">
            <h4>设计师简介</h4>
            <ul class="icon-list">
                <li class="home-list">所在公司：@Model.CompanyName</li>
                <li class="bubble-list">电&nbsp;&nbsp;话：@Model.PeoplePhone</li>
                <li class="letter-list">邮&nbsp;&nbsp;箱：@Model.PeopleMail</li>
            </ul>
        </div>
        <p>
            @Html.Raw(Model.PeopleInfo)
        </p>
        <div class="decoration"></div>

        @*设计案例*@
        <div class="adaptive-style">
            <h4>设计案例</h4>
            <a class="adaptive-three-activate" href="#"><i class="fa fa-th"></i></a>
            <a class="adaptive-two-activate active-adaptive-style" href="#"><i class="fa fa-th-large"></i></a>
            <a class="adaptive-one-activate" href="#"><i class="fa fa-navicon"></i></a>
        </div>
        <div class="clear"></div>
        <div class="decoration"></div>
        <div class="portfolio-adaptive adaptive-two">
            @foreach (WebCase cs in ViewBag.CaseList)
            {
                <div class="adaptive-item">
                    <a href="/WebChatApp/AppCase/CaseDetail?caseID=@cs.CaseID" title="Caption Goes Here">
                        <img class="responsive-image" src="@AppSettingsHelper.thumbnailImage@cs.thumbnailImage" alt="img">
                    </a>
                    <h4>@cs.CaseTitle</h4>
                    <p>
                        @cs.CaseBrief
                    </p>
                </div>
            }
        </div>
        <div class="decoration"></div>
        @*<div class="container no-bottom">
            <h4>精选评论</h4>
        </div>
        <div class="container no-bottom">
            <em class="speach-left-title">小张:</em>
            <p class="speach-left blue-bubble">完美的家具设计完美的家具设计完美的家具设计完美的家具设计完美的家具设计完美的家具设计</p>
            <div class="clear"></div>
            <em class="speach-right-title">小张:</em>
            <p class="speach-right blue-bubble">完美的家具设计完美的家具设计完美的家具设计完美的家具设计完美的家具设计</p>
        </div>
        <div class="decoration"></div>*@

        @*新闻部分*@
        @Html.Partial("~/Areas/WebChatApp/Views/AppRecommend/NewsRecommend.cshtml")

        @*推送部分*@
        @Html.Partial("~/Areas/WebChatApp/Views/AppRecommend/CompanyRecommend.cshtml")
    </div>
</div>

