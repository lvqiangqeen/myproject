@using AIYunNet.CMS.Domain.Model
@using AIYunNet.CMS.BLL.Service
@using AIYunNet.CMS.Common.Utility
@{
    WebRecommendService webreser = new WebRecommendService();
    //关于我们
    List<WebRecommend> webabout = webreser.GetWebRecommendListPc(13);
    //联系我们
    List<WebRecommend> webtouch = webreser.GetWebRecommendListPc(14);
    //帮助中心
    List<WebRecommend> webhelp = webreser.GetWebRecommendListPc(15, 9, false);
    WebContentService bll = new WebContentService();
    List<WebFriendLink> friendLinkList = bll.GetFriendLinkList();


}
<div class="pre_footer">
    <div class="container">
        <aside id="footer_bar" class="row">
            <div class="span3">
                <div class="sidepanel widget_about">
                    <h4 class="sidebar_header">关于我们</h4>
                    <ul class="recent_posts">
                        @if (webabout.Count !=0)
                        {
                            <li>
                                <div class="img_wrapper">
                                    <a href="/AboutUs/AboutUsDetail" target="_blank" title="点击查看详情" onclick="sessionStorage.setItem('key',$(this).attr('id'));" id="aboutus"><img src="@AppSettingsHelper.ImgUrl@webabout[0].RecommendImg" width="88" height="88" class="alignleft" /></a>
                                </div>
                                <div class="recent_posts_content">
                                    <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@StringHelper.StringTruncat(webabout[0].RecommendInfo,42,"...")</p>
                                    @*<span class="read_more"><a href="@webabout[0].RecommendUrl" target="_blank">查看更多...</a></span>*@
                                </div>
                            </li>
                        }

                    </ul>

                    <h4 class="sidebar_header">联系我们</h4>
                    <ul class="recent_posts">
                        @if (webtouch.Count != 0)
                        {
                            <li>
                                <div class="recent_posts_content">
                                    <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@StringHelper.StringTruncat(webtouch[0].RecommendInfo,65,"...")</p>
                                    <span class="read_more"><a href="/AboutUs/AboutUsDetail" target="_blank" onclick="sessionStorage.setItem('key',$(this).attr('id'));" id="linkus">查看更多...</a></span>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="span3">
                <div class="sidepanel widget_posts">
                    <div class="span3">
                        <div class="sidepanel widget_twitter">
                            <h4 class="sidebar_header">帮助中心</h4>
                            @if (webhelp.Count != 0)
                            {
                                foreach (WebRecommend web in webhelp)
                                {
                                    <a href="/AboutUs/SinglePageDetail?rid=@web.RecommendId" style="font-size: 14px;line-height: 30px;color: white;" onclick="sessionStorage.setItem('key', 'helpcenter');">@web.RecommendName</a><br />
                                }
                                <span class="read_more"><a href="/AboutUs/AboutUsDetail" target="_blank" onclick="sessionStorage.setItem('key',$(this).attr('id'));" id="helpcenter">查看更多...</a></span>
                            }
                        </div><!-- .widget_twitter -->
                    </div>
                </div><!-- .sidepanel -->
            </div>
            <div class="span6">
                <div class="sidepanel widget_recent_entries">
                    <h4 class="sidebar_header">友情链接</h4>
                    @foreach (WebFriendLink link in friendLinkList)
                    {
                        <a href="@link.LinkUrl" style="font-size: 14px;line-height: 30px;color: white;margin-left: 8px;" target="_blank">@link.Name</a>
                    }
                </div><!-- .widget_recent_entries -->
            </div>

        </aside>
    </div>
</div>
