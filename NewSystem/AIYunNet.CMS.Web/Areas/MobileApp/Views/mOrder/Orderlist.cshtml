<script src="~/Content/mui-master/examples/hello-mui/js/mui.pullToRefresh.js"></script>
<script src="~/Content/mui-master/examples/hello-mui/js/mui.pullToRefresh.material.js"></script>
<script>
    mui.init();
    (function ($) {
        //阻尼系数
        var deceleration = mui.os.ios ? 0.003 : 0.0009;
        $('.mui-scroll-wrapper').scroll({
            
            bounce: false,
            indicators: true, //是否显示滚动条
            deceleration: deceleration
        });
        $.ready(function () {
            //循环初始化所有下拉刷新，上拉加载。
            var pageIndex1 = 1;
            var pageIndex2 = 1;
            var pageIndex3 = 1;
            var pageIndex4 = 1;
            $.each(document.querySelectorAll('.mui-slider-group .mui-scroll'), function (index, pullRefreshEl) {
                $(pullRefreshEl).pullToRefresh({
                    up: {
                        contentnomore: '没有更多了',
                        contentrefresh: "正在加载...",
                        auto: true,
                        callback: function () {
                            var self = this;
                            setTimeout(function () {
                                var isall = 1;
                                var IsAccept = 0;
                                var IsPlan = 0;
                                if (index == "0") {
                                    isall = 0;
                                    IsAccept = 0;
                                    IsPlan = 1;
                                } else if (index == "1") {
                                    isall = 0;
                                    IsAccept = 1;
                                    IsPlan = 1;

                                } else if (index == "2")
                                {
                                    isall = 0;
                                    IsAccept = 1;
                                    IsPlan = 0;
                                }
                                else {
                                    isall = 0;
                                    IsAccept = 2;
                                    IsPlan = 1;
                                }
                                var ul = self.element.querySelector('.mui-table-view');
                                //ul.appendChild(createFragment(ul, index, 5));
                                //ul.appendChild(createFragment1(pageIndex4, isall, IsAccept, IsPlan));
                                var bool = false;
                                if (index == "0")
                                {
                                    var html = createFragment1(pageIndex1, isall, IsAccept, IsPlan);
                                    ul.appendChild(createFragment1(pageIndex1, isall, IsAccept, IsPlan));
                                    bool = html.childNodes.length == 0 ? true : false;
                                    pageIndex1++;
                                }
                                else if (index == "1") {
                                    var html = createFragment1(pageIndex2, isall, IsAccept, IsPlan);
                                    ul.appendChild(createFragment1(pageIndex2, isall, IsAccept, IsPlan));
                                    bool = html.childNodes.length == 0 ? true : false;
                                    pageIndex2++;
                                } else if (index == "2") {
                                    var html = createFragment1(pageIndex3, isall, IsAccept, IsPlan);
                                    ul.appendChild(createFragment1(pageIndex3, isall, IsAccept, IsPlan));
                                    bool = html.childNodes.length == 0 ? true : false;
                                    pageIndex3++;
                                } else {
                                    var html = createFragment1(pageIndex4, isall, IsAccept, IsPlan);
                                    ul.appendChild(createFragment1(pageIndex4, isall, IsAccept, IsPlan));
                                    bool = html.childNodes.length == 0 ? true : false;
                                    pageIndex4++;
                                }
                                self.endPullUpToRefresh(bool);
                            }, 200);
                        }
                    }
                });
            });
            var time = function (AddOn)
            {
                var a = AddOn
                var date = new Date(parseInt(a.slice(6)));
                var result = date.getFullYear() + '年' + date.getMonth() + '月' + date.getDate()+'日';
                return result;
            }

            var createFragment1 = function (pageIndex, isall, IsAccept, IsPlan) {
                var fragment = document.createDocumentFragment();
                var result = "";
                $.ajax({
                    type: 'post',
                    url: '/MobileApp/mOrder/GetOrderlist',
                    async: false,
                    dataType: "json",
                    data: {
                        CurPage: pageIndex,
                        PageSize: 10,
                        isall: isall,
                        IsAccept: IsAccept,
                        IsPlan: IsPlan
                    },
                    success: function (data) {
                        
                        $.each(data, function (i, item) {
                            var li = document.createElement('li');
                            li.className = 'my-order-item mui-table-view-cell';
                            
                            var html= '<div class="my-order-item-tit clearfix">'
                                + '<h3>订单号：888888888</h3>'
                            if (item.IsAccept == '0')
                            {
                                html += '<span class="my-order-wait-zf">新订单</span>';
                            } else if (item.IsAccept == '1')
                            {
                                html += '<span class="my-order-wait-zf" style="color:#009688">已接受</span>';
                            } else if (item.IsAccept == '2')
                            {
                                html += '<span class="my-order-wait-zf" style="color:red;">已拒绝</span>';
                            }
                            html += '</div>'
                            + '<div class="my-order-item-txt">'
                                + '<div class="my-order-time">' + time(item.AddOn) + '</div>'
                                + '<div class="my-order-address">' + item.CityName + ' ' + item.buidingname + '</div>'
                            + '</div>'
                            + '<div class="my-order-item-btn">'
                                + '<div class="pos-r">'
                                    + '<span class="my-order-item-red"><a href="/MobileApp/mOrder/OrderDetail?guid=' + item.Guid + '">查看订单</a></span>';
                            if (item.IsAccept == '2') {
                            } else if (item.IsPlan && item.IsAccept == '1') {
                                html += '<span class="my-order-item-red"><a href="order-payment.html">查看流程</a></span><span class="my-order-item-red"><a href="/MobileApp/mOrder/mobileBuidingDetail?Guid=' + item.Guid + '">订单进度</a></span></div></div>';
                            } else if (!item.IsPlan && item.IsAccept == '1')
                            { html += '<span class="my-order-item-red"><a href="order-payment.html">发布流程</a></span></div></div>'; }

                            li.innerHTML = html;
                            fragment.appendChild(li);
                        });
                        
                    }
                });
                return fragment;
            };
        });
    })(mui);
</script>
