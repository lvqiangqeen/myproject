@using AIYunNet.CMS.Domain.Model;
@using AIYunNet.CMS.Common.Utility;
@using AIYunNet.CMS.BLL.Service;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport">
    <meta content="yes" name="apple-mobile-web-app-capable" />
    <meta content="black" name="apple-mobile-web-app-status-bar-style" />
    <meta content="telephone=no" name="format-detection" />
    <title></title>
    <link href="~/favicon.ico" type="image/x-icon" rel="icon">
    <link href="~/Content/WorkerApp/css/base.css" rel="stylesheet" />
    <link href="~/Content/WorkerApp/css/common.css" rel="stylesheet" />
    <link href="~/Content/layer.mobile-v2.0/layer_mobile/need/layer.css" rel="stylesheet" />
    <script src="~/Content/WorkerApp/js/jquery.min.js"></script>
    @*<script src="~/Content/design/js/jquery-2.0.3.min.js"></script>*@
    <script src="~/Content/design/js/jquerysession.js"></script>
    <script src="~/Content/WorkerApp/js/common.js"></script>
    <!--banner 脚本-->
    
    <script src="~/Content/WorkerApp/js/TouchSlide.1.1.js"></script>
    <script src="~/Content/layer.mobile-v2.0/layer_mobile/layer.js"></script>
    <style>
        .adress {
background-image: url(/content/WorkerApp/updateimages/address.png);
    background-size: 120% 100%;
    padding-right: 1rem;
    margin: 0 0.625rem 0 0.625rem;
    display: inline;
        }
    </style>
    @*<script src="~/Content/layui/layui.js"></script>*@
</head>
<body>
    @if (SessionHelper.GetSession("mkjcitycode") != null)
    {
        <input type="hidden" value="@SessionHelper.GetSession("mkjcitycode").ToString()" id="mkjcitycode" />
        <input type="hidden" value="@SessionHelper.GetSession("mkjcityname").ToString()" id="mkjcityname" />
    }
    <header class="header header-save" id="header">
        <a href="javascript:history.go(-1)" target=_self class="back"></a>
        @if (SessionHelper.GetSession("mkjcityname") == null)
        {
            <h1>AU装修宝</h1>
        }
        else
        {
            <h1>AU装修宝(@SessionHelper.GetSession("mkjcityname").ToString())</h1>
        }
       
        <a href="/MobileApp/App/AreaList" target=_self class="adress"></a>
    </header>
    <!--header-end-->
    @RenderBody()
    <!--container-end-->
    <!--footer-->
    <style>
        body, html,input{font-family:"微软雅黑";}
    </style>
    <footer class="footer" id="footer">
        <ul class="footnav box-flex">
            <li><a href="/MobileApp/App/Index" class="home"><i></i><span class="full-block">首页</span></a></li>
            <li><a href="/MobileApp/mLogin/registCenter" class="foot-worker"><i></i><span class="full-block">工人入驻</span></a></li>
            @if (SessionHelper.Get("PositionCode") == "WebWorkerLeader" || SessionHelper.Get("PositionCode") == "WebWorker")
            {
                <li><a href="/MobileApp/mOrder/Orderlist" class="foot-order"><i></i><span class="full-block">我的订单</span></a></li>
            }
            else
            {
                <li><a href="/MobileApp/MobileUser/DemandList" class="foot-order"><i></i><span class="full-block">我的订单</span></a></li>
            }
           
            <li><a href="/MobileApp/MobileCenter/mPCenter" class="my"><i></i><span class="full-block">我的</span></a></li>
        </ul>
    </footer>
    <!--footer-end-->
    <!--栏目更多-->
    <script type="text/javascript">

        var mnavid = $.session.get('footnav');
        $(".footnav > li").eq(mnavid).addClass("on");
        $(".footnav > li").click(function() {
            var num = $(this).index();
            $.session.set('footnav', num);
        });


$(".ind-nav").each(function(){
  var self = $(this);
  var n=self.find("ul li").length;
  if(n<=8){
  self.find( ".more").addClass("hide-more");
  }else{
  self.find(".more").removeClass("hide-more");
  }
 self.find(".more").click(function(){
    self.find( "ul" ).toggleClass("intro");
	self.find(".more").toggleClass("add-more");
  });
});


    </script>
    <!--栏目更多-->
</body>
</html>
