@model AIYunNet.CMS.Domain.Model.WebPeopleAuthentication
@using AIYunNet.CMS.Domain.Model
@using AIYunNet.CMS.Common.Utility
@{
    ViewBag.Title = "AddAndUpdateAu";
    Layout = "~/Areas/SysAdmin/Views/Shared/_SysAdminLayout.cshtml";
}

<div class="box">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#caseInfoTab" data-toggle="tab">身份认证信息</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade in active" id="caseInfoTab">
            <div class="panel-body">

                    <div class="innerLR">
                        <div class="form-horizontal">
                            <div class="form-group" style="display:none">
                                @Html.HiddenFor(m => m.id, new { id = "hidauID" })
                            </div>
                            <div class="form-group">
                                <label for="UserTrueName" class="col-sm-2 control-label">用户姓名：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(m => m.UserTrueName, new { @class = "form-control", @readonly = "readonly" })
                                </div>

                                <label for="UserType" class="col-sm-2 control-label">注册类别：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(m => m.UserType, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="TrueName" class="col-sm-2 control-label">真实姓名：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(m => m.TrueName, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="UserIdentity" class="col-sm-2 control-label">身份证：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(m => m.UserIdentity, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="ShengfenZ" class="col-sm-2 control-label">身份证正面：</label>
                                <div class="col-sm-8">
                                    <img src="@AppSettingsHelper.ImgUrl@Model.ShengfenZ" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="ShengfenF" class="col-sm-2 control-label">身份证反面：</label>
                                <div class="col-sm-8">
                                    <img src="@AppSettingsHelper.ImgUrl@Model.ShengfenF" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="ShengfenZ" class="col-sm-2 control-label">是否通过认证：</label>
                                <div class="col-sm-8">
                                    @if (Model.IsAuthentication == 1)
                                    {
                                        @:<span style="color:red">通过认证</span>
                                    }
                                    else if (Model.IsAuthentication == 2)
                                    {
                                        @:未通过认证
                                    }
                                    else
                                    {
                                        @:未审核
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-9" style="text-align:center">
                                    <a onclick="afterAddAndUpdateUserAu(@Model.id,1)" class="btn btn-primary new_button_style">通过认证</a>
                                    <a onclick="afterAddAndUpdateUserAu(@Model.id,2)" class="btn new_button_style">未通过认证</a>
                                    <a href="#" class="btn btn-primary new_button_style" id="Returnback">返回</a>
                                </div>
                            </div>

                        </div>
                    </div>
                
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $("#Returnback").click(function () {
            window.location.href = sessionStorage.getItem('url');
        })
        function afterAddAndUpdateUserAu(AUID, IsIsAuthentication) {
            $.ajax({
                type: "post",
                url: "/SysAdmin/UsersCenter/AddAndUpdateAu",
                data: {
                    "AUID": AUID,
                    "IsIsAuthentication": IsIsAuthentication },
                success: function (data) {
                        window.location.href = window.location.href;

                }

            });
        }
    </script>
    }